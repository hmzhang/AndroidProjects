<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

   <EditText
        android:id="@+id/itemspenton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:hint="Item Spent On"></EditText>
    <EditText
        android:id="@+id/amountspent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:hint="Amount Spent"></EditText>
  </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <Button
        android:id="@+id/additems"
        android:onClick="addItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Add Item">
    </Button>
    <Button
        android:id="@+id/deleteallitems"
        android:onClick="deleteAllItems"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Delete All">
    </Button>
    <Button
        android:id="@+id/savechanges"
        android:onClick="saveItemChanges"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Save Changes">
        
    </Button>
    </LinearLayout>
	 <ListView
        android:id="@+id/listview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView> 

</LinearLayout>
